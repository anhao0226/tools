{
    "manifest_version": 2,
    "name": "简易工具箱",
    "version": "1.0.0",
    "description": "集翻译, 书签, 简单收藏的简易工具箱",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "permissions": [
        "tabs",
        "contextMenus",
        "activeTab",
        "declarativeContent",
        "storage",
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": [
                "css/content.css",
                "css/element-plus.css"
            ],
            "js": [
                "js/vue.global.js",
                "js/element-plus.js",
                "js/content.js"
            ],
            "run_at": "document_end"
        }
    ]
}